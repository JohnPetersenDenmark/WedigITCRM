
@model WedigITCRM.EntitityModels.PaymentCondition

<div class="formcontainer">

    <form method="post">


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.Description"></label>
                <input asp-for="@Model.Description" id="userEmail" class="form-control" />
