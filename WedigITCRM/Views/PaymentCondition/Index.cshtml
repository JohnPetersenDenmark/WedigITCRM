@model List<WedigITCRM.EntitityModels.PaymentCondition>


<div class="formcontainer">
    <div class="row">
        <div class="col-12 text-center tableheadline">
            <h3>Betalingsbetingelser</h3>
        </div>
    </div>
    <br /><br />


    @if (Model != null)
    {
        @if (Model.Count > 0)
        {
            @foreach (var deliveryCondition in Model)
            {
                <div class="row" style="border-style: solid;border-width: 1px;border-color: #CCCCCC;margin-top: 10px;">
                    <div class="col-4">
                        Id @deliveryCondition.Id
                    </div>
                    <div class="col-4">
                        @deliveryCondition.Description
                    </div>
                    <div class="col-4">
                        <a class="btn btn-yahoo btn-sm" asp-controller="PaymentCondition" asp-action="edit" asp-route-paymentConditionId=@deliveryCondition.Id>Rediger</a>
                        <a class="btn btn-yahoo btn-sm" asp-controller="PaymentCondition" asp-action="delete" asp-route-paymentConditionId=@deliveryCondition.Id>Slet</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-12">
                    Der er ikke oprettet nogle betalingsbetingelser
                </div>
            </div>
        }

        <br /><br />
        <div class="row">
            <div class="col-12">
                <a class="btn btn-yahoo btn-sm" asp-controller="PaymentCondition" asp-action="create">Opret</a>
            </div>
        </div>
    }
</div>
