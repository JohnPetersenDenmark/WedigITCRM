@model WedigITCRM.Controllers.DeliveryConditionController.DeliveryConditionModel

    <div class="formcontainer">


        <form method="post">

            <div class="row">
                <div class="col-4">
                    ID @Model.Id
                </div>
           
                <div class="col-4">
                    <label asp-for="@Model.Description"></label>
                    <input asp-for="@Model.Description" class="form-control" />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
            </div>


            <div class="row">
                <div class="col-4">
                    <button type="submit" class="btn btn-yahoo btn-sm">Gem</button>
                </div>
            </div>
            <input asp-for="@Model.Id" class="form-control" type="hidden" />
        </form>
    </div>
