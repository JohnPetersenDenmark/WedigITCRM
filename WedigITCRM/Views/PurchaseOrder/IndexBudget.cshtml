@model IPagedList<PurchaseBudgetViewModel>

<div class="formcontainer">
    <div style="color : #17a2b8;" class="tableheadline">
        Indkøbsbudgetter
    </div>
    <br />
   

    @if (Model != null)
    {
        if (Model.Count > 0)
        {
            <div class="rowcontainer">
                <div class="row purchaseorderindexheadlines">
                    <div class="col-1">Fra</div>
                    <div class="col-1">Til</div>
                    <div class="col-1">Periode</div>
                    <div class="col-3">Beskrivelse</div>
                    <div class="col-2">
                    </div>
                </div>
            </div>

            @foreach (var purchaseBudget in Model)
            {
                <div class="rowcontainer purchaseorderindexorderline">
                    <div class="row" id="@purchaseBudget.Id">
                        <div class="col-1">@purchaseBudget.PeriodFromDate</div>
                        <div class="col-1">@purchaseBudget.PeriodToDate</div>
                        <div class="col-1">@purchaseBudget.Period</div>
                        <div class="col-3">@purchaseBudget.Description</div>                     
                        <div class="col-2">
                            <a asp-controller="PurchaseOrder" asp-action="CreatePurchaseBudget"><i style="color : #17a2b8;" class="fa fa-ticket fa-2x fa-fw"></i></a>
                            <a asp-controller="PurchaseOrder" asp-action="EditPurchaseBudget" asp-route-purchaseBudgetId="@purchaseBudget.Id"><i style="color : #17a2b8;" class="fa fa-pencil-square-o fa-2x fa-fw"></i></a>                           
                            <a asp-controller="PurchaseOrder" asp-action="DeletePurchaseBudget" asp-route-purchaseBudgetId="@purchaseBudget.Id"><i style="color : #17a2b8;" class="fa fa-times fa-2x fa-fw"></i></a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="rowcontainer">
                <div class="row">
                    <div class="col-3">
                        Ingen indkøbsbudgetter fundet
                    </div>
                </div>
            </div>
        }
    }


    <br />
    <br />
    <div class="form-row">
        <div class="col-4">

            @Html.PagedListPager(Model, page => Url.Action("IndexBudget", new { page }), new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
                LinkToFirstPageFormat = "<< Første",
                LinkToPreviousPageFormat = "< Forrige",
                LinkToNextPageFormat = "Næste >",
                LinkToLastPageFormat = "sidste >>"
            })
        </div>

    </div>

</div>

@section Scripts {
    <script>


        $(document).ready(function () {

 
        });
    </script>
}