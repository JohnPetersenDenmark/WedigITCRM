@model BookingSetupViewModel

    <div class="formcontainer">

        <div class="rowcontainer">
            <div class="form-group row">
                <div class="form-group col-md-4">
                    Åbningstid
                </div>



                <div class="form-group col-md-4">
                    Lukketid
                </div>
            </div>

            <div class="form-group row">
                <div class="form-group col-md-4">
                    @Model.MondayOfficeStartTime
                </div>
                <div class="form-group col-md-4">
                    @Model.MondayOfficeEndTime
                </div>
            </div>
        </div>

        @if (Model.Id == 0)
        {
            <div class="rowcontainer">
                <div class="row">
                    <div class="col-2">
                        <a asp-controller="booking" asp-action="CreateBookingSetup" class="btn btn-outline-secondary btn-sm">Opret</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="rowcontainer">
                <div class="row">
                    <div class="col-2">
                        <a asp-controller="booking" asp-action="EditBookingSetup" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">Rediger</a>
                    </div>
                    <div class="col-2">
                        <a asp-controller="booking" asp-action="DeleteBookingSetup" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">Slet</a>
                    </div>
                </div>
            </div>
        }

    </div>