@model BookingResourceViewModel

<div class="formcontainer">
    <form method="post">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.JobDescription"></label>
                <input asp-for="@Model.JobDescription" class="form-control" />
                <span asp-validation-for="@Model.JobDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.EmailForCalendar"></label>
                <input asp-for="@Model.EmailForCalendar" class="form-control" />
                <span asp-validation-for="@Model.EmailForCalendar" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.JobServiceTypes">Resursetype</label>
                <select class="select-picker" asp-for="@Model.JobServiceTypes"
                        asp-items="@(new SelectList(Model.SelectionListServiceTypes, "Id", "Name"))" multiple>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.CalendarEventsColor"></label>
                <input asp-for="@Model.CalendarEventsColor" type="color" id="@Model.CalendarEventsColor" class="form-control" />
                <span asp-validation-for="@Model.CalendarEventsColor" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-4">
                <button type="submit" class="btn btn-outline-secondary btn-sm">Gem</button>
                <a asp-controller="booking" asp-action="ShowBookingResources" class="btn btn-outline-secondary btn-sm">Annuller</a>
            </div>
        </div>
    </form>
</div>