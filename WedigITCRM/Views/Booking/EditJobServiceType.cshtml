
@model JobServiceTypeViewModel

<div class="formcontainer">
    <form method="post">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.Name">Beskrivelse</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.Desciption"></label>
                <input asp-for="@Model.Desciption" class="form-control" />
                <span asp-validation-for="@Model.Desciption" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.BookingServicesIds">Ydelser</label>
                <select class="select-picker" asp-for="@Model.BookingServicesIds"
                        asp-items="@(new SelectList(Model.SelectionListBookingService, "id", "Name"))" multiple>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col-md-4">
                <button type="submit" class="btn btn-outline-secondary btn-sm">Gem</button>
                <a asp-controller="booking" asp-action="ShowJobServiceTypes" class="btn btn-outline-secondary btn-sm">Annuller</a>
            </div>
        </div>
    </form>
</div>